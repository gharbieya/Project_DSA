{
  // Force LaTeX Workshop to compile with XeLaTeX (needed for fontspec + Arabic Unicode)
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "XeLaTeX",
      "tools": ["xelatex"]
    }
  ],
  "latex-workshop.latex.recipe.default": "XeLaTeX",

  // Optional: don't auto-build on every save (you build with Ctrl+Alt+B)
  "latex-workshop.latex.autoBuild.run": "never",

  // Remove all ChkTeX warnings from the Problems panel
  "latex-workshop.linting.enabled": false,
  "latex-workshop.linting.chktex.enabled": false,

  // PDF viewer inside VS Code
  "latex-workshop.view.pdf.viewer": "tab",
}